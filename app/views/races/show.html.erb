<div class="race-show-top"></div>
<div class="race-show-bottom"></div>
<% if race_finished?(@race) %>
  <h1>This race has ended</h1>
<% end %>
<% if race_ongoing?(@race) %>
  <h1>This race is ongoing</h1>
<% end %>
<% if race_not_started?(@race) %>
  <h1>This race hasn't started yet</h1>
  <% unless @racer %>
    <button id="race-join-btn">Join this race 🏇</button>
  <% end %>
  <div class="race-current_participants">
    <h3>Racers</h3>
    <div>
      <% @lanes.each do |lane| %>
        <%= lane.user.username %>
        Odds: 1/100
      <% end %>
    </div>
  </div>
<% end %>
<%= javascript_pack_tag "race-show" %>
