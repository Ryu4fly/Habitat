<div class="landing-container">
  <div class="banner">
    <div class="cover-sheet">
      <div class="title">
        <h1>Nicotine Derby</h1>
        <p>Race to Reduce Smoking</p>

        <%= link_to new_user_session_path do %>
          <button>Login</button>
        <% end %>

      </div>
      <div class="down-arrow">
        <span class="iconify" data-icon="bi:arrow-down-circle" data-inline="false"></span>
      </div>
    </div>
  </div>

  <div class="about-app">
    <div class="about-background">
      <div class="ocean"></div>
      <div class="crowd"></div>
    </div>
    <div class="phone-demo">
      <div id="iphonecase">
      </div>
      <div class="screen">
        <div id="app-preview" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#app-preview" data-slide-to="0" class="active"></li>
            <li data-target="#app-preview" data-slide-to="1"></li>
            <li data-target="#app-preview" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active images">
              <img class="images" src="https://images.unsplash.com/photo-1500462918059-b1a0cb512f1d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=634&q=80" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="images" src="https://images.unsplash.com/photo-1500462918059-b1a0cb512f1d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=634&q=80" alt="Second slide">
            </div>
            <div class="carousel-item images">
              <img class="images" src="https://images.unsplash.com/photo-1500462918059-b1a0cb512f1d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=634&q=80" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev carousel-buttons" href="#app-preview" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next carousel-buttons" href="#app-preview" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="developers-container">

    <div class="developers">
      <h4>Meet Our Developers</h4>
      <div class="select-one">
        <p>Select to See Their Profiles</p>
        <span class="iconify git-icon" data-icon="akar-icons:github-fill" data-inline="false"></span>
      </div>
    </div>

    <div class="git-profiles">
      <%= link_to "https://github.com/OoKiaoO", class: "git-links" do %>
        <div class="avatar" id="OoKiaoO"></div>
        <p class="names">Chiara Campalani</p>
      <% end %>


      <%= link_to "https://github.com/HatAndBread", class: "git-links" do  %>
        <div class="avatar" id="HatAndBread"></div>
        <p class="names">Joshua Hume</p>
      <% end %>


      <%= link_to "https://github.com/Ryu4fly", class: "git-links" do %>
        <div class="avatar" id="Ryu4fly"></div>
        <p class="names">Ryugi Suguro</p>
      <% end %>
    </div>

    <div class="footer">
      <p class="sponsor">Sponsered with <span class="iconify" data-icon="ant-design:heart-outlined" data-inline="false"></span> from Le Wagon</p>
    </div>

  </div>

</div>
